import random

# Split string method
names_string = input("Give me everybody's names, separated by a comma. ")
names = names_string.split(", ")
# ğŸš¨ Don't change the code above ğŸ‘†

#Write your code below this line ğŸ‘‡
num_items = len(names)
#print(num_items)
random_number = random.randint(0, num_items-1)

random_payer = names[random_number]
print(f"{random_payer} is going to buy the meal today!")

random_payer = random.choice(names) #will also give a random name from the names list
